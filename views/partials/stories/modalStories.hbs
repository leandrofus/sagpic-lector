<div class="modal fade" id="modalHistory{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalHistoryTitle">{{this.title}} </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row row-cols-lg-3 row-cols-sm-1">
                    <div class="col-lg-3 col-sm-1">
                        <img src="{{this.img}}" alt="{{this.title}}" width="100%">
                    </div>
                    <div class="col-lg-7">
                        <div class="row flex-row-reverse">
                            <div class="col-ls-9">
                                <h3 class="text-muted text-end">
                                    Autor:{{this.authorName}}
                                </h3>
                            </div>
                            {{!-- <div class="col-0"></div> --}}
                            <div class="col-ls-3">
                                <h4>Sintesis</h4>
                            </div>
                            <hr>
                        </div>
                        <div class="row" style="overflow-y: scroll;max-height: 300px;">
                            <p class="text-muted">{{this.sint}}</p>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        a
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>