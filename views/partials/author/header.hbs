<style>
    .form-floating {
        --bs-text-opacity: 1;
        color: var(--bs-secondary-color) !important;
    }

    .background-jumbo {
        background-image: url('https://tse1.mm.bing.net/th?id=OIP.KpW8v33xdpgcM0kAo-z0gwHaCe&pid=Api&P=0');
        background-repeat: no-repeat;
        background-size: cover;
        background-color: #42e365ad;
        background-blend-mode: color-burn;
    }

    .jumbotron-form {
        -webkit-box-shadow: 0px 10px 24px 0px rgba(44, 44, 44, 0.82);
        -moz-box-shadow: 0px 10px 24px 0px rgba(44, 44, 44, 0.82);
        box-shadow: 5px 6px 10px 0px rgba(44, 44, 44, 0.82);
        color: black;
    }

    .profile-logged {
        object-fit: cover;
        border-radius: 100%;
        aspect-ratio: 1;
        width: 150px;
    }
</style>
<div class="row d-flex d-sx-none">
    <div class="col-12 background-jumbo">
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-1 fw-bold lh-1 mb-3" style="color: aliceblue;">{{user.[0].name}}</h1>
                <p class="col-lg-10 fs-4" style="color: aliceblue;">{{user.[0].description}}</p>
            </div>
            {{#if galery}}

            <div class="col-md-10 mx-auto col-lg-4 col-sm-12 g-0">
                <div class="p-2 p-md-3 border rounded-3 bg-light jumbotron-form">
                    <div class="row">
                        <div class="col-lg-3 col-sm-12">
                            <img class="profile-logged" width="150" height="150" src="{{user.[0].profile_photo}}"
                                alt="{{user.[0].name}}">
                        </div>
                        <div class="col-lg-9 col-sm-12">
                            <h3>Conoce a nuestros autores</h3>
                            <p> <small> {{bio}}</small></p>
                        </div>
                    </div>
                </div>
            </div>

