<div class="mx-auto col-lg-6">
    <div class="p-lg-2 border rounded-3 bg-light jumbotron-form">
        <div class="row row-cols-2">
            <div class="col-lg-4 col-sm-12 text-center">
                <a href="/profile/{{_id}}">
                <img class="profile-logged" src="{{profile_photo}}" alt="{{name}}">
                </a>
            </div>
            <div class="col-lg-8 col-sm-4">
                <h3>{{this.name}}</h3>
                <p> <small> {{bio}}</small></p>
            </div>
        </div>
        <hr class="m-0 p-0">
        <div class="row">
            <h3>Social</h3>
            {{#if social.[0].[facebook]}}
            {{> author/social/facebook}}
            {{/if}}
            {{#if social.[0].[instagram]}}
            {{> author/social/instagram}}
            {{/if}}
            {{#if social.[0].[youtube]}}
            z {{> author/social/youtube}}
            {{/if}}
            {{#if social.[0].[soundcloud]}}
            {{> author/social/soundcloud}}
            {{/if}}
            {{#if social.[0].[pinterest]}}
            {{> author/social/pinterest}}
            {{/if}}
        </div>
    </div>
</div>